    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/style.css?v=<%= cssVersion %>" rel="stylesheet">
    <style>
        /* Modern Dynamic Menu System with Glassmorphism */
        .sidebar {
            position: fixed;
            left: -280px; /* Hidden by default - increased width */
            top: 0;
            width: 280px;
            height: 100vh;
            background: linear-gradient(135deg, 
                rgba(99, 102, 241, 0.15) 0%,
                rgba(168, 85, 247, 0.15) 25%,
                rgba(236, 72, 153, 0.15) 50%,
                rgba(59, 130, 246, 0.15) 75%,
                rgba(16, 185, 129, 0.15) 100%);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            display: flex;
            flex-direction: column;
            z-index: 1000;
            transition: all 0.5s cubic-bezier(0.4, 0.0, 0.2, 1);
            overflow: hidden;
            padding: 24px;
        }
        
        .sidebar.open {
            left: 0;
            transform: translateX(0);
        }
        
        .sidebar::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, 
                rgba(99, 102, 241, 0.1) 0%,
                rgba(168, 85, 247, 0.1) 25%,
                rgba(236, 72, 153, 0.1) 50%,
                rgba(59, 130, 246, 0.1) 75%,
                rgba(16, 185, 129, 0.1) 100%);
            z-index: -1;
            animation: gradientShift 10s ease infinite;
        }
        
        @keyframes gradientShift {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        /* Stylish Hamburger Button */
        .hamburger-menu {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 16px;
            width: 56px;
            height: 56px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
            transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
            font-size: 20px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .hamburger-menu:hover {
            transform: scale(1.1) rotate(3deg);
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.6);
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        }
        
        .hamburger-menu.menu-open {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            transform: rotate(90deg);
            box-shadow: 0 15px 35px rgba(245, 87, 108, 0.5);
        }
        
        /* Enhanced Overlay */
        .menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, 
                rgba(0, 0, 0, 0.4) 0%,
                rgba(79, 70, 229, 0.2) 50%,
                rgba(0, 0, 0, 0.4) 100%);
            backdrop-filter: blur(5px);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
        }
        
        .menu-overlay.show {
            opacity: 1;
            visibility: visible;
        }
        
        /* Main content with smooth transitions */
        .main-content {
            margin-left: 0;
            min-height: 100vh;
            padding-top: 90px;
            transition: all 0.5s cubic-bezier(0.4, 0.0, 0.2, 1);
        }
        
        /* Modern Navigation Groups */
        .nav-group {
            margin-bottom: 8px;
            position: relative;
        }
        
        .nav-group-header {
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        
        .nav-submenu {
            margin-left: 0;
            margin-top: 8px;
            max-height: 0;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
            background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.1) 0%,
                rgba(255, 255, 255, 0.05) 100%);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }
        
        .nav-group.open .nav-submenu {
            max-height: 300px;
            padding: 12px 0;
            margin-bottom: 8px;
        }
        
        .submenu-link {
            font-size: 14px;
            padding: 12px 20px !important;
            margin: 4px 12px;
            border-radius: 8px;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .submenu-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }
        
        .submenu-link:hover::before {
            left: 100%;
        }
        
        .submenu-link:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateX(8px);
            color: #fff;
        }
        
        .submenu-link i {
            width: 20px;
            font-size: 14px;
            margin-right: 12px;
            color: rgba(255, 255, 255, 0.8);
        }
        
        /* Dynamic Arrow Animation */
        .nav-arrow {
            float: right;
            font-size: 12px;
            margin-top: 6px;
            transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
            color: rgba(255, 255, 255, 0.7);
        }
        
        .nav-group.open .nav-arrow {
            transform: rotate(180deg);
            color: #60a5fa;
        }
        
        /* Modern Navigation Links */
        .nav-link {
            position: relative;
            border-radius: 14px;
            margin: 6px 0;
            padding: 14px 20px;
            transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            display: flex;
            align-items: center;
            font-weight: 500;
            font-size: 15px;
            overflow: hidden;
            backdrop-filter: blur(5px);
            border: 1px solid transparent;
        }
        
        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, 
                transparent, 
                rgba(255, 255, 255, 0.1), 
                transparent);
            transition: left 0.6s;
        }
        
        .nav-link:hover::before {
            left: 100%;
        }
        
        .nav-link:hover {
            background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.15) 0%,
                rgba(255, 255, 255, 0.1) 100%);
            transform: translateX(10px) scale(1.02);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            color: #fff;
        }
        
        .nav-link.active {
            background: linear-gradient(135deg, 
                rgba(99, 102, 241, 0.8) 0%,
                rgba(168, 85, 247, 0.8) 50%,
                rgba(236, 72, 153, 0.8) 100%);
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
            color: #fff;
            transform: translateX(5px);
        }
        
        .nav-link.active::after {
            content: '';
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            width: 6px;
            height: 6px;
            background: #fff;
            border-radius: 50%;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
        }
        
        .nav-link i {
            font-size: 18px;
            margin-right: 14px;
            width: 24px;
            text-align: center;
            transition: all 0.3s ease;
        }
        
        .nav-link:hover i {
            transform: scale(1.2) rotate(5deg);
            filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.5));
        }
        
        /* Modern Brand Section */
        .sidebar h4 {
            background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 50%, #f472b6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 24px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
            position: relative;
        }
        
        .sidebar h4::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 2px;
            background: linear-gradient(90deg, #60a5fa, #a78bfa, #f472b6);
            border-radius: 2px;
        }
        
        /* Enhanced Language Switcher */
        .language-switcher {
            display: flex;
            gap: 8px;
            margin-bottom: 24px;
            padding: 8px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .language-switcher .btn {
            flex: 1;
            padding: 8px 12px;
            border-radius: 8px;
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            text-align: center;
            font-size: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .language-switcher .btn:hover {
            background: rgba(255, 255, 255, 0.15);
            color: #fff;
            transform: scale(1.05);
        }
        
        .language-switcher .btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: #fff;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }
        
        /* Enhanced Scrollbar */
        .sidebar nav {
            flex: 1;
            overflow-y: auto;
            padding-bottom: 20px;
            max-height: calc(100vh - 180px);
            padding-right: 8px;
        }
        
        .sidebar nav::-webkit-scrollbar {
            width: 6px;
        }
        
        .sidebar nav::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 6px;
        }
        
        .sidebar nav::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 6px;
            transition: all 0.3s ease;
        }
        
        .sidebar nav::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .hamburger-menu {
                top: 15px;
                left: 15px;
                width: 48px;
                height: 48px;
                font-size: 18px;
            }
            
            .main-content {
                padding-top: 80px;
            }
            
            .sidebar {
                width: 260px;
                left: -260px;
            }
            
            .nav-link {
                padding: 12px 18px;
                font-size: 14px;
            }
            
            .submenu-link {
                padding: 10px 18px !important;
                font-size: 13px;
            }
        }
        
        @media (max-width: 480px) {
            .sidebar {
                width: 100%;
                left: -100%;
            }
            
            .hamburger-menu {
                width: 44px;
                height: 44px;
                font-size: 16px;
            }
        }
        
        @media (max-height: 700px) {
            .sidebar nav {
                max-height: calc(100vh - 150px);
            }
            
            .nav-link {
                padding: 10px 18px;
                font-size: 14px;
            }
            
            .submenu-link {
                padding: 8px 18px !important;
                font-size: 12px;
            }
        }
        
        @media (max-height: 600px) {
            .sidebar nav {
                max-height: calc(100vh - 120px);
            }
            
            .language-switcher {
                margin-bottom: 16px;
            }
            
            .sidebar h4 {
                font-size: 20px;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
