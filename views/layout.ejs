    <!-- Modern Dynamic Menu JavaScript -->
    <script>
        // Global Menu State Management
        window.isMenuOpen = window.isMenuOpen || false;
        let activeNavGroups = new Set();
        
        // Load menu state from localStorage
        function loadMenuState() {
            const savedState = localStorage.getItem('erp-menu-state');
            const savedGroups = localStorage.getItem('erp-nav-groups');
            if (savedGroups) {
                activeNavGroups = new Set(JSON.parse(savedGroups));
            }
            return savedState === 'open';
        }
        
        // Save menu state to localStorage
        function saveMenuState(isOpen) {
            localStorage.setItem('erp-menu-state', isOpen ? 'open' : 'closed');
            localStorage.setItem('erp-nav-groups', JSON.stringify([...activeNavGroups]));
        }
        
        // Toggle navigation group (submenu)
        function toggleNavGroup(groupName, event) {
            event.preventDefault();
            event.stopPropagation();
            
            const navGroup = document.querySelector(`[data-group="${groupName}"]`);
            if (!navGroup) return;
            
            const isCurrentlyOpen = navGroup.classList.contains('open');
            
            if (isCurrentlyOpen) {
                // Close the group
                navGroup.classList.remove('open');
                activeNavGroups.delete(groupName);
                
                // Add closing animation
                const submenu = navGroup.querySelector('.nav-submenu');
                submenu.style.animation = 'slideUp 0.3s ease-out';
                setTimeout(() => {
                    submenu.style.animation = '';
                }, 300);
            } else {
                // Open the group
                navGroup.classList.add('open');
                activeNavGroups.add(groupName);
                
                // Add opening animation
                const submenu = navGroup.querySelector('.nav-submenu');
                submenu.style.animation = 'slideDown 0.3s ease-out';
                setTimeout(() => {
                    submenu.style.animation = '';
                }, 300);
            }
            
            saveMenuState(window.isMenuOpen);
        }
        
        // Toggle global menu with enhanced animations
        function toggleGlobalMenu() {
            if (window.isMenuOpen) {
                closeGlobalMenu();
            } else {
                openGlobalMenu();
            }
        }
        
        // Open global menu with smooth animations
        function openGlobalMenu() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('menu-overlay');
            const mainContent = document.querySelector('.main-content');
            const hamburgerBtn = document.getElementById('hamburger-btn');
            
            window.isMenuOpen = true;
            sidebar.classList.add('open');
            overlay.classList.add('show');
            mainContent.classList.add('menu-open');
            hamburgerBtn.classList.add('menu-open');
            document.body.style.overflow = 'hidden';
            
            // Add staggered animation to menu items
            const navLinks = sidebar.querySelectorAll('.nav-link');
            navLinks.forEach((link, index) => {
                link.style.animation = `slideInLeft 0.3s ease-out ${index * 0.05}s both`;
            });
            
            saveMenuState(true);
        }
        
        // Close global menu with smooth animations
        function closeGlobalMenu() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('menu-overlay');
            const mainContent = document.querySelector('.main-content');
            const hamburgerBtn = document.getElementById('hamburger-btn');
            
            window.isMenuOpen = false;
            sidebar.classList.remove('open');
            overlay.classList.remove('show');
            mainContent.classList.remove('menu-open');
            hamburgerBtn.classList.remove('menu-open');
            document.body.style.overflow = '';
            
            // Clear animations
            const navLinks = sidebar.querySelectorAll('.nav-link');
            navLinks.forEach((link) => {
                link.style.animation = '';
            });
            
            saveMenuState(false);
        }
        
        // Initialize menu system on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Add CSS animations
            const style = document.createElement('style');
            style.textContent = `
                @keyframes slideInLeft {
                    from {
                        opacity: 0;
                        transform: translateX(-20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateX(0);
                    }
                }
                
                @keyframes slideDown {
                    from {
                        opacity: 0;
                        transform: translateY(-10px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
                
                @keyframes slideUp {
                    from {
                        opacity: 1;
                        transform: translateY(0);
                    }
                    to {
                        opacity: 0;
                        transform: translateY(-10px);
                    }
                }
            `;
            document.head.appendChild(style);
            
            // Load saved menu and nav group states
            const savedMenuOpen = loadMenuState();
            if (savedMenuOpen) {
                openGlobalMenu();
            }
            
            // Restore nav group states
            activeNavGroups.forEach(groupName => {
                const navGroup = document.querySelector(`[data-group="${groupName}"]`);
                if (navGroup) {
                    navGroup.classList.add('open');
                }
            });
            
            // Handle nav link clicks (close menu on mobile)
            const navLinks = document.querySelectorAll('.sidebar .nav-link:not(.nav-group-header)');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    // Close menu on mobile after navigation
                    if (window.innerWidth <= 768) {
                        setTimeout(closeGlobalMenu, 200);
                    }
                });
            });
            
            // Handle keyboard shortcuts
            document.addEventListener('keydown', function(event) {
                // Close menu on Escape key
                if (event.key === 'Escape' && window.isMenuOpen) {
                    closeGlobalMenu();
                }
                // Toggle menu with Ctrl/Cmd + M
                if ((event.ctrlKey || event.metaKey) && event.key === 'm') {
                    event.preventDefault();
                    toggleGlobalMenu();
                }
                // Close all nav groups with Ctrl/Cmd + Shift + C
                if ((event.ctrlKey || event.metaKey) && event.shiftKey && event.key === 'C') {
                    event.preventDefault();
                    document.querySelectorAll('.nav-group.open').forEach(group => {
                        group.classList.remove('open');
                    });
                    activeNavGroups.clear();
                    saveMenuState(window.isMenuOpen);
                }
            });
            
            // Handle window resize
            window.addEventListener('resize', function() {
                // Auto-close menu on very small screens
                if (window.innerWidth < 480 && window.isMenuOpen) {
                    closeGlobalMenu();
                }
                
                // Adjust animations for smaller screens
                if (window.innerWidth <= 768) {
                    document.documentElement.style.setProperty('--menu-animation-duration', '0.3s');
                } else {
                    document.documentElement.style.setProperty('--menu-animation-duration', '0.5s');
                }
            });
            
            // Add hover effects for desktop
            if (window.innerWidth > 768) {
                const navLinks = document.querySelectorAll('.nav-link');
                navLinks.forEach(link => {
                    link.addEventListener('mouseenter', function() {
                        this.style.transform = 'translateX(10px) scale(1.02)';
                    });
                    
                    link.addEventListener('mouseleave', function() {
                        if (!this.classList.contains('active')) {
                            this.style.transform = '';
                        }
                    });
                });
            }
            
            // Enhanced touch gesture support for mobile
            let touchStartX = 0;
            let touchStartY = 0;
            let isTouchSwiping = false;
            
            document.addEventListener('touchstart', function(event) {
                touchStartX = event.touches[0].clientX;
                touchStartY = event.touches[0].clientY;
                isTouchSwiping = false;
            }, { passive: true });
            
            document.addEventListener('touchmove', function(event) {
                if (!touchStartX || !touchStartY) return;
                
                const touchEndX = event.touches[0].clientX;
                const touchEndY = event.touches[0].clientY;
                
                const diffX = touchStartX - touchEndX;
                const diffY = touchStartY - touchEndY;
                
                // Check if it's a horizontal swipe (more horizontal than vertical)
                if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > 30) {
                    isTouchSwiping = true;
                    
                    // Swipe left to close menu (when menu is open)
                    if (diffX > 80 && window.isMenuOpen) {
                        closeGlobalMenu();
                        event.preventDefault();
                    } 
                    // Swipe right from left edge to open menu (when menu is closed)
                    else if (diffX < -80 && !window.isMenuOpen && touchStartX < 50) {
                        openGlobalMenu();
                        event.preventDefault();
                    }
                }
            }, { passive: false });
            
            document.addEventListener('touchend', function(event) {
                touchStartX = 0;
                touchStartY = 0;
                isTouchSwiping = false;
            }, { passive: true });
            
            // Enhanced accessibility features
            const sidebar = document.getElementById('sidebar');
            const hamburgerBtn = document.getElementById('hamburger-btn');
            
            // Focus management for better accessibility
            hamburgerBtn.addEventListener('focus', function() {
                this.style.outline = '2px solid #60a5fa';
                this.style.outlineOffset = '2px';
            });
            
            hamburgerBtn.addEventListener('blur', function() {
                this.style.outline = '';
                this.style.outlineOffset = '';
            });
            
            // Trap focus within sidebar when open
            sidebar.addEventListener('keydown', function(event) {
                if (!window.isMenuOpen) return;
                
                const focusableElements = sidebar.querySelectorAll(
                    'a[href], button:not([disabled]), [tabindex]:not([tabindex="-1"])'
                );
                const firstElement = focusableElements[0];
                const lastElement = focusableElements[focusableElements.length - 1];
                
                if (event.key === 'Tab') {
                    if (event.shiftKey) {
                        if (document.activeElement === firstElement) {
                            event.preventDefault();
                            lastElement.focus();
                        }
                    } else {
                        if (document.activeElement === lastElement) {
                            event.preventDefault();
                            firstElement.focus();
                        }
                    }
                }
            });
            
            // Performance optimization: debounce resize events
            let resizeTimeout;
            const originalResizeHandler = window.addEventListener('resize', function() {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(function() {
                    // Close menu on desktop if window becomes wide enough
                    if (window.innerWidth > 768 && window.isMenuOpen) {
                        closeGlobalMenu();
                    }
                    
                    // Adjust animations for different screen sizes
                    if (window.innerWidth <= 768) {
                        document.documentElement.style.setProperty('--menu-animation-duration', '0.3s');
                    } else {
                        document.documentElement.style.setProperty('--menu-animation-duration', '0.5s');
                    }
                }, 250);
            });
            
            // Initialize menu system successfully
            console.log('ERP Menu System: Initialized successfully with touch gestures and accessibility features');
            
        }); // Close DOMContentLoaded handler
    </script>
    
