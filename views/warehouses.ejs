<!-- Content Header with Sticky Toolbar -->
<div class="content-header">
    <div class="toolbar">
        <div>
            <h1><%= __('warehouses.title') %></h1>
            <p class="text-muted mb-0"><%= __('warehouses.subtitle') %></p>
        </div>
        <div class="toolbar-actions">
            <button class="btn btn-outline" onclick="warehouseToggleFilterPanel()" data-testid="button-filter">
                <i class="fas fa-filter"></i>
                <%= __('button.filter') %>
                <span id="activeFiltersCount" class="badge badge-primary" style="display: none; margin-left: 4px;"></span>
            </button>
            <a href="/warehouses/new?lang=<%= locale %>" class="btn btn-primary" data-testid="button-add-warehouse">
                <i class="fas fa-plus"></i>
                <%= __('warehouses.addNew') %>
            </a>
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
<% if (success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <%= __('warehouseMessages.' + success) %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <%= __('warehouseValidation.' + error) || __('warehouseMessages.' + error) %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<!-- Filter Panel -->
<div id="filterPanel" class="filter-panel" data-testid="panel-filter">
    <div class="filter-header">
        <h3><%= __('filters.title') %></h3>
        <button class="filter-close-btn" onclick="warehouseToggleFilterPanel()" data-testid="button-close-filter">
            <i class="fas fa-times"></i>
        </button>
    </div>
    
    <div class="filter-content">
        <!-- Search Section -->
        <div class="filter-section">
            <div class="form-group">
                <input type="text" 
                       id="searchInput" 
                       class="form-control" 
                       placeholder="<%= __('warehouses.searchPlaceholder') %>"
                       data-testid="input-search">
                <i class="fas fa-search search-icon"></i>
            </div>
        </div>
        
        <!-- Status Filter Section -->
        <div class="filter-section">
            <h4 class="filter-section-title"><%= __('warehouses.status') %></h4>
            <div class="radio-group">
                <label class="radio-item" data-testid="radio-status-all">
                    <input type="radio" name="status" value="all">
                    <span class="radio-mark"></span>
                    <%= __('warehouses.filterAll') %>
                </label>
                <label class="radio-item" data-testid="radio-status-active">
                    <input type="radio" name="status" value="Aktif" checked>
                    <span class="radio-mark"></span>
                    <%= __('warehouses.filterActive') %>
                </label>
                <label class="radio-item" data-testid="radio-status-inactive">
                    <input type="radio" name="status" value="Pasif">
                    <span class="radio-mark"></span>
                    <%= __('warehouses.filterInactive') %>
                </label>
            </div>
        </div>

        <!-- Shelf System Filter Section -->
        <div class="filter-section">
            <h4 class="filter-section-title"><%= __('warehouses.hasShelfSystem') %></h4>
            <div class="radio-group">
                <label class="radio-item" data-testid="radio-shelf-all">
                    <input type="radio" name="shelfSystem" value="all" checked>
                    <span class="radio-mark"></span>
                    <%= __('warehouses.filterAll') %>
                </label>
                <label class="radio-item" data-testid="radio-shelf-yes">
                    <input type="radio" name="shelfSystem" value="true">
                    <span class="radio-mark"></span>
                    <%= __('warehouses.filterWithShelves') %>
                </label>
                <label class="radio-item" data-testid="radio-shelf-no">
                    <input type="radio" name="shelfSystem" value="false">
                    <span class="radio-mark"></span>
                    <%= __('warehouses.filterWithoutShelves') %>
                </label>
            </div>
        </div>
        
        <!-- Filter Actions -->
        <div class="filter-actions">
            <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()" data-testid="button-clear-filters">
                <%= __('filters.clear') %>
            </button>
        </div>
    </div>
</div>

<!-- Warehouses List -->
<div class="warehouses-grid" id="warehousesGrid" data-testid="grid-warehouses">
    <% if (warehouses && warehouses.length > 0) { %>
        <% warehouses.forEach((warehouse) => { %>
            <div class="warehouse-card" data-testid="card-warehouse-<%= warehouse.id %>">
                <div class="warehouse-card-header">
                    <div class="warehouse-name-row">
                        <h3 class="warehouse-name" data-testid="text-warehouse-name-<%= warehouse.id %>">
                            <%= warehouse.name %>
                        </h3>
                        <div class="warehouse-status">
                            <span class="status-badge status-<%= warehouse.status.toLowerCase() %>" 
                                  data-testid="badge-status-<%= warehouse.id %>">
                                <%= warehouse.status %>
                            </span>
                        </div>
                    </div>
                </div>
                
                <div class="warehouse-card-body">
                    <div class="warehouse-info">
                        <div class="info-item">
                            <i class="fas fa-layer-group text-primary"></i>
                            <span><%= __('warehouses.hasShelfSystem') %>:</span>
                            <strong data-testid="text-shelf-system-<%= warehouse.id %>" data-has-shelf-system="<%= warehouse.hasShelfSystem %>">
                                <%= warehouse.hasShelfSystem ? __('warehouseForm.shelfSystemYes') : __('warehouseForm.shelfSystemNo') %>
                            </strong>
                        </div>
                        
                        <% if (warehouse.hasShelfSystem) { %>
                            <div class="info-item">
                                <i class="fas fa-list-ol text-info"></i>
                                <span><%= __('warehouses.shelfCount') %>:</span>
                                <strong data-testid="text-shelf-count-<%= warehouse.id %>">
                                    <%= warehouse.shelves ? warehouse.shelves.length : 0 %>
                                </strong>
                            </div>
                        <% } %>
                        
                        <div class="info-item">
                            <i class="fas fa-calendar text-muted"></i>
                            <span>Created:</span>
                            <small class="text-muted" data-testid="text-created-<%= warehouse.id %>">
                                <%= new Date(warehouse.createdAt).toLocaleDateString(locale) %>
                            </small>
                        </div>
                    </div>
                    
                    <!-- Shelves Preview -->
                    <% if (warehouse.hasShelfSystem && warehouse.shelves && warehouse.shelves.length > 0) { %>
                        <div class="shelves-preview">
                            <div class="shelves-label">
                                <i class="fas fa-boxes text-warning"></i>
                                <%= __('warehouses.shelves') %>:
                            </div>
                            <div class="shelves-list" data-testid="list-shelves-<%= warehouse.id %>">
                                <% warehouse.shelves.slice(0, 6).forEach((shelf) => { %>
                                    <span class="shelf-tag"><%= shelf %></span>
                                <% }); %>
                                <% if (warehouse.shelves.length > 6) { %>
                                    <span class="shelf-tag more">+<%= warehouse.shelves.length - 6 %></span>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <div class="warehouse-card-footer">
                    <div class="card-actions">
                        <a href="/warehouses/<%= warehouse.id %>?lang=<%= locale %>" 
                           class="btn btn-outline-primary btn-sm" 
                           data-testid="button-view-<%= warehouse.id %>">
                            <i class="fas fa-eye"></i>
                            <%= __('warehouses.view') %>
                        </a>
                        
                        <a href="/warehouses/<%= warehouse.id %>/edit?lang=<%= locale %>" 
                           class="btn btn-outline-secondary btn-sm" 
                           data-testid="button-edit-<%= warehouse.id %>">
                            <i class="fas fa-edit"></i>
                            <%= __('warehouses.edit') %>
                        </a>
                        
                        <form method="POST" action="/warehouses/<%= warehouse.id %>/toggle?lang=<%= locale %>" style="display: inline;">
                            <button type="submit" 
                                    class="btn btn-outline-<%= warehouse.status === 'Aktif' ? 'warning' : 'success' %> btn-sm"
                                    data-testid="button-toggle-<%= warehouse.id %>">
                                <i class="fas fa-power-off"></i>
                                <%= warehouse.status === 'Aktif' ? __('warehouses.deactivate') : __('warehouses.activate') %>
                            </button>
                        </form>
                        
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <!-- Empty State -->
        <div class="empty-state" data-testid="empty-state">
            <div class="empty-state-content">
                <i class="fas fa-warehouse empty-state-icon"></i>
                <h3 class="empty-state-title"><%= __('warehouses.noWarehouses') %></h3>
                <p class="empty-state-description"><%= __('warehouses.createFirst') %></p>
                <a href="/warehouses/new?lang=<%= locale %>" 
                   class="btn btn-primary" 
                   data-testid="button-create-first">
                    <i class="fas fa-plus me-2"></i>
                    <%= __('warehouses.addNew') %>
                </a>
            </div>
        </div>
    <% } %>
</div>

<!-- Filter Results Info -->
<div id="filterResultsInfo" class="filter-results-info" style="display: none;">
    <span id="filterResultsText" data-testid="text-filter-results"></span>
</div>

