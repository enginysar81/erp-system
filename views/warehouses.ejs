<script>
// Warehouse-specific filter functionality (separate from product filters)
let warehouseFilterPanelOpen = false;

function warehouseToggleFilterPanel() {
    const panel = document.getElementById('filterPanel');
    warehouseFilterPanelOpen = !warehouseFilterPanelOpen;
    
    if (warehouseFilterPanelOpen) {
        panel.classList.add('open');
    } else {
        panel.classList.remove('open');
    }
}

function clearFilters() {
    document.getElementById('searchInput').value = '';
    document.querySelector('input[name="status"][value="Aktif"]').checked = true;
    document.querySelector('input[name="shelfSystem"][value="all"]').checked = true;
    applyWarehouseFilters();
}

function applyWarehouseFilters() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    const statusFilter = document.querySelector('input[name="status"]:checked').value;
    const shelfSystemFilter = document.querySelector('input[name="shelfSystem"]:checked').value;
    
    const warehouseCards = document.querySelectorAll('.warehouse-card');
    let visibleCount = 0;
    
    warehouseCards.forEach(card => {
        const warehouseName = card.querySelector('.warehouse-name').textContent.toLowerCase();
        const warehouseStatus = card.querySelector('.status-badge').textContent.trim();
        const shelfSystemElement = card.querySelector('[data-testid^="text-shelf-system-"]');
        // Use data attribute for robust localization-independent detection
        const hasShelfSystem = shelfSystemElement.getAttribute('data-has-shelf-system') === 'true';
        
        let shouldShow = true;
        
        // Apply search filter
        if (searchTerm && !warehouseName.includes(searchTerm)) {
            shouldShow = false;
        }
        
        // Apply status filter  
        if (statusFilter !== 'all' && warehouseStatus !== statusFilter) {
            shouldShow = false;
        }
        
        // Apply shelf system filter
        if (shelfSystemFilter !== 'all') {
            const filterValue = shelfSystemFilter === 'true';
            if (hasShelfSystem !== filterValue) {
                shouldShow = false;
            }
        }
        
        if (shouldShow) {
            card.style.display = 'block';
            visibleCount++;
        } else {
            card.style.display = 'none';
        }
    });
    
    // Update filter count badge
    const activeFiltersCount = document.getElementById('activeFiltersCount');
    const filtersActive = searchTerm || statusFilter !== 'all' || shelfSystemFilter !== 'all';
    
    if (filtersActive) {
        activeFiltersCount.style.display = 'inline';
        let filterCount = 0;
        if (searchTerm) filterCount++;
        if (statusFilter !== 'all') filterCount++;
        if (shelfSystemFilter !== 'all') filterCount++;
        activeFiltersCount.textContent = filterCount;
    } else {
        activeFiltersCount.style.display = 'none';
    }
    
    // Update results info
    const resultsInfo = document.getElementById('filterResultsInfo');
    const resultsText = document.getElementById('filterResultsText');
    
    if (filtersActive || statusFilter !== 'all') {
        resultsInfo.style.display = 'block';
        resultsText.textContent = visibleCount + ' warehouse(s) shown of ' + warehouseCards.length + ' total';
    } else {
        resultsInfo.style.display = 'none';
    }
    
    console.log('Warehouse filters applied:', {
        searchTerm, 
        statusFilter, 
        shelfSystemFilter, 
        visibleCount, 
        totalCount: warehouseCards.length
    });
}

// Initialize warehouse filters (separate from product filters)
document.addEventListener('DOMContentLoaded', function() {
    // Only run if we're on the warehouses page
    if (document.querySelector('.warehouses-grid')) {
        // Search input
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                setTimeout(applyWarehouseFilters, 300); // Debounce
            });
        }
        
        // Status radio buttons
        document.querySelectorAll('input[name="status"]').forEach(radio => {
            radio.addEventListener('change', applyWarehouseFilters);
        });
        
        // Shelf system radio buttons  
        document.querySelectorAll('input[name="shelfSystem"]').forEach(radio => {
            radio.addEventListener('change', applyWarehouseFilters);
        });
        
        // Apply initial filters to show only active warehouses by default
        console.log('Applying initial warehouse filters...');
        applyWarehouseFilters();
    }
});
</script>