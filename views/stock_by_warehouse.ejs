<!-- Modern Stock by Warehouse Page -->
<div class="modern-warehouse-page">
  <div class="page-container">
    <!-- Enhanced Header -->
    <div class="page-header">
      <div class="header-content">
        <div class="header-main">
          <div class="header-icon">
            <i class="fas fa-warehouse"></i>
          </div>
          <div>
            <h1 class="page-title"><%= __('stockByWarehouse.title') %></h1>
            <p class="page-subtitle"><%= __('stockByWarehouse.subtitle') %></p>
          </div>
        </div>
        <div class="header-actions">
          <div class="stats-pill" id="total-records">
            <i class="fas fa-box"></i>
            <%= __('stockByWarehouse.totalRecords').replace('{count}', barcodes.length) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Stock Statistics Dashboard -->
    <div class="stock-stats-dashboard">
      <!-- Total Stock Summary Cards -->
      <div class="total-stats-grid">
        <div class="stat-card primary">
          <div class="stat-header">
            <div class="stat-icon">
              <i class="fas fa-chart-bar"></i>
            </div>
            <h3><%= __('stockByWarehouse.stats.totalStock.title') %></h3>
          </div>
          <div class="stat-values">
            <div class="stat-main" id="filtered-total-barcodes">
              <%= stockStats.totalStats.totalBarcodes %>
            </div>
            <div class="stat-label"><%= __('stockByWarehouse.stats.totalStock.label') %></div>
          </div>
        </div>
        
        <div class="stat-card success">
          <div class="stat-header">
            <div class="stat-icon">
              <i class="fas fa-cubes"></i>
            </div>
            <h3><%= __('stockByWarehouse.stats.totalPieces.title') %></h3>
          </div>
          <div class="stat-values">
            <div class="stat-main" id="filtered-total-pieces">
              <%= stockStats.totalStats.totalPieces %>
            </div>
            <div class="stat-label"><%= __('stockByWarehouse.stats.totalPieces.label') %></div>
          </div>
        </div>
        
        <div class="stat-card info">
          <div class="stat-header">
            <div class="stat-icon">
              <i class="fas fa-ruler"></i>
            </div>
            <h3><%= __('stockByWarehouse.stats.totalMeters.title') %></h3>
          </div>
          <div class="stat-values">
            <div class="stat-main" id="filtered-total-meters">
              <%= stockStats.totalStats.totalMeters.toFixed(2) %>
            </div>
            <div class="stat-label"><%= __('stockByWarehouse.stats.totalMeters.label') %></div>
          </div>
        </div>
        
        <div class="stat-card warning">
          <div class="stat-header">
            <div class="stat-icon">
              <i class="fas fa-tags"></i>
            </div>
            <h3><%= __('stockByWarehouse.stats.uniqueProducts.title') %></h3>
          </div>
          <div class="stat-values">
            <div class="stat-main" id="filtered-unique-products">
              <%= stockStats.totalStats.uniqueProducts %>
            </div>
            <div class="stat-label"><%= __('stockByWarehouse.stats.uniqueProducts.label') %></div>
          </div>
        </div>
      </div>


      <!-- Quick Filter Buttons -->
      <div class="quick-filters-section">
        <div class="section-header">
          <h3>
            <i class="fas fa-bolt"></i>
            <%= __('quickFilters.title') %>
          </h3>
        </div>
        <div class="quick-filters-container">
          
          <!-- Product Name Quick Search -->
          <div class="quick-filter-group">
            <div class="filter-group-label">
              <i class="fas fa-search"></i>
              <%= __('quickFilters.searchProduct') %>
            </div>
            <div class="quick-search-container">
              <div class="quick-search-input-wrapper">
                <input type="text" 
                       class="quick-product-search" 
                       id="quick-product-search" 
                       placeholder="<%= __('quickFilters.searchPlaceholder') %>"
                       autocomplete="off">
                <i class="fas fa-search quick-search-icon"></i>
                <button type="button" class="quick-search-clear" id="quick-search-clear" style="display: none;" onclick="stockManager.clearQuickSearch()">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
          </div>

          <!-- Most Used Warehouses -->
          <div class="quick-filter-group">
            <div class="filter-group-label">
              <i class="fas fa-warehouse"></i>
              <%= __('quickFilters.popularWarehouses') %>
            </div>
            <div class="quick-filter-buttons">
              <% stockStats.quickFilters.warehouses.forEach(warehouse => { %>
                <button class="quick-filter-btn warehouse-filter" 
                        data-warehouse-id="<%= warehouse.warehouseId %>"
                        onclick="quickFilterWarehouse('<%= warehouse.warehouseId %>')">
                  <div class="filter-btn-content">
                    <div class="filter-btn-name"><%= warehouse.warehouseName %></div>
                    <div class="filter-btn-count"><%= warehouse.totalBarcodes %> <%= __('common.items') %></div>
                  </div>
                </button>
              <% }); %>
            </div>
          </div>
          
          <!-- Multi-Select Shelves with Button Design -->
          <% if (stockStats.quickFilters.shelves.length > 0) { %>
          <div class="quick-filter-group">
            <div class="filter-group-label">
              <i class="fas fa-layer-group"></i>
              <%= __('quickFilters.popularShelves') %>
            </div>
            <div class="quick-shelf-buttons">
              <% stockStats.quickFilters.shelves.forEach(shelf => { %>
                <button class="quick-shelf-btn" 
                        data-shelf-id="<%= shelf.shelfId %>"
                        onclick="stockManager.toggleQuickShelfSelection('<%= shelf.shelfId %>')">
                  <div class="shelf-btn-content">
                    <div class="shelf-btn-name"><%= shelf.shelfId %></div>
                    <div class="shelf-btn-count"><%= shelf.totalBarcodes %> <%= __('common.items') %></div>
                  </div>
                </button>
              <% }); %>
            </div>
            <div class="shelf-multi-actions">
              <button class="shelf-action-btn select-all" onclick="stockManager.selectAllQuickShelves()">
                <i class="fas fa-check-double"></i>
                <%= __('common.selectAll') %>
              </button>
              <button class="shelf-action-btn clear-all" onclick="stockManager.clearAllQuickShelves()">
                <i class="fas fa-times"></i>
                <%= __('common.clear') %>
              </button>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>


    <!-- Modern Results Table -->
    <div class="results-container">
      <!-- Table Controls -->
      <div class="table-controls">
        <div class="table-controls-left">
          <div class="view-toggle">
            <button class="view-btn active" data-view="table" onclick="switchView('table')">
              <i class="fas fa-table"></i> <%= __('view.table') %>
            </button>
            <button class="view-btn" data-view="list" onclick="switchView('list')">
              <i class="fas fa-list"></i> <%= __('view.list') %>
            </button>
          </div>
          <div class="items-per-page">
            <label><%= __('perPage.label') %></label>
            <select id="items-per-page" onchange="changeItemsPerPage(this.value)">
              <option value="20">20</option>
              <option value="30" selected>30</option>
              <option value="50">50</option>
              <option value="100">100</option>
            </select>
          </div>
        </div>
        <div class="table-controls-right">
          <div class="pagination-info" id="pagination-info">
            1-30 / 53 kayÄ±t
          </div>
        </div>
      </div>
      
      <div class="table-wrapper">
        <table class="modern-table">
          <thead>
            <tr>
              <th>
                <div class="th-content">
                  <i class="fas fa-box"></i>
                  <%= __('stockByWarehouse.table.product') %>
                </div>
              </th>
              <th>
                <div class="th-content">
                  <i class="fas fa-tags"></i>
                  <%= __('stockByWarehouse.table.features') %>
                </div>
              </th>
              <th>
                <div class="th-content">
                  <i class="fas fa-calculator"></i>
                  <%= __('stockByWarehouse.table.qty') %>
                </div>
              </th>
              <th>
                <div class="th-content">
                  <i class="fas fa-barcode"></i>
                  <%= __('stockByWarehouse.table.barcode') %>
                </div>
              </th>
              <th>
                <div class="th-content">
                  <i class="fas fa-layer-group"></i>
                  <%= __('stockByWarehouse.table.shelf') %>
                </div>
              </th>
            </tr>
          </thead>
          <tbody id="barcode-table-body">
            <% if (typeof barcodes !== 'undefined' && barcodes.length > 0) { %>
              <% barcodes.forEach(barcode => { %>
              <tr class="table-row" 
                  data-barcode="<%= barcode.code %>"
                  data-product-id="<%= barcode.productId %>"
                  data-warehouse-id="<%= barcode.warehouseId %>"
                  data-shelf-id="<%= barcode.shelfId || '' %>"
                  data-product-name="<%= barcode.productName %>"
                  onclick="openBarcodeModal('<%= barcode.code %>')">
                <td>
                  <div class="product-cell">
                    <div class="product-info">
                      <div class="product-name"><%= barcode.productName %></div>
                      <div class="warehouse-name"><%= barcode.warehouseName %></div>
                    </div>
                  </div>
                </td>
                <td>
                  <div class="features-cell">
                    <% if (barcode.productAttributes && barcode.productAttributes.length > 0) { %>
                      <% barcode.productAttributes.forEach(attr => { %>
                        <span class="feature-tag">
                          <%= attr.name %>: <%= attr.value %>
                        </span>
                      <% }); %>
                    <% } else { %>
                      <span class="no-data">-</span>
                    <% } %>
                  </div>
                </td>
                <td>
                  <div class="quantity-badge <%= barcode.unit === 'metre' ? 'type-meter' : 'type-piece' %>">
                    <%= barcode.quantity %> <%= barcode.unit === 'metre' ? __('common.unit.meters') : __('common.unit.pieces') %>
                  </div>
                </td>
                <td>
                  <div class="barcode-cell">
                    <code class="barcode-code"><%= barcode.code %></code>
                  </div>
                </td>
                <td>
                  <% if (barcode.shelfId) { %>
                    <div class="shelf-badge"><%= barcode.shelfId %></div>
                  <% } else { %>
                    <span class="no-data">-</span>
                  <% } %>
                </td>
              </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5">
                  <div class="empty-state">
                    <i class="fas fa-inbox"></i>
                    <div>No barcode data available</div>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination Controls -->
      <div class="pagination-container" id="pagination-container">
        <div class="pagination-wrapper">
          <button class="pagination-btn" id="prev-page" onclick="changePage(-1)" disabled>
            <i class="fas fa-chevron-left"></i> <%= __('common.previous') %>
          </button>
          <div class="pagination-numbers" id="pagination-numbers">
            <!-- Page numbers will be generated here -->
          </div>
          <button class="pagination-btn" id="next-page" onclick="changePage(1)">
            <%= __('common.next') %> <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      </div>
      
      <!-- No Results Message -->
      <div id="no-results" class="no-results-state" style="display: none;">
        <i class="fas fa-search"></i>
        <h3><%= __('stockByWarehouse.noResults') %></h3>
        <p>Filtreleme kriterlerinizi deÄiÅtirerek tekrar deneyin</p>
      </div>
    </div>
  </div>
</div>


<!-- Modern Barcode Detail Modal -->
<div class="modal" id="barcodeModal" tabindex="-1" aria-hidden="true" style="display: none !important;">
  <div class="modal-dialog modal-lg">
    <div class="modern-modal">
      <div class="modal-header-modern">
        <div class="modal-title-modern">
          <div class="modal-icon">
            <i class="fas fa-barcode"></i>
          </div>
          <h5><%= __('stockByWarehouse.modal.details') %></h5>
        </div>
        <button type="button" class="modal-close-btn" data-bs-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body-modern">
        <div class="modal-content-grid">
          <!-- Barcode Number -->
          <div class="modal-field">
            <label class="field-label">
              <i class="fas fa-barcode"></i>
              <%= __('stockByWarehouse.modal.barcodeNo') %>
            </label>
            <div class="barcode-display">
              <code class="barcode-value" id="modal-barcode"></code>
              <button class="copy-btn" onclick="copyToClipboard('modal-barcode')">
                <i class="fas fa-copy"></i>
              </button>
            </div>
          </div>
          
          <!-- Product Name -->
          <div class="modal-field">
            <label class="field-label">
              <i class="fas fa-box"></i>
              <%= __('stockByWarehouse.modal.productName') %>
            </label>
            <div class="field-value" id="modal-product-name"></div>
          </div>
          
          <!-- Features -->
          <div class="modal-field full-width">
            <label class="field-label">
              <i class="fas fa-tags"></i>
              <%= __('stockByWarehouse.modal.features') %>
            </label>
            <div class="features-display" id="modal-features"></div>
          </div>
          
          <!-- Quantity -->
          <div class="modal-field">
            <label class="field-label">
              <i class="fas fa-calculator"></i>
              <%= __('stockByWarehouse.modal.quantity') %>
            </label>
            <div class="field-value" id="modal-quantity"></div>
          </div>
          
          <!-- Shelf -->
          <div class="modal-field">
            <label class="field-label">
              <i class="fas fa-layer-group"></i>
              <%= __('stockByWarehouse.modal.shelf') %>
            </label>
            <div class="field-value" id="modal-shelf"></div>
          </div>
          
          <!-- Created Date -->
          <div class="modal-field full-width">
            <label class="field-label">
              <i class="fas fa-calendar"></i>
              <%= __('stockByWarehouse.modal.createdDate') %>
            </label>
            <div class="field-value" id="modal-created-date"></div>
          </div>
        </div>
      </div>
      <div class="modal-footer-modern">
        <div class="modal-actions">
          <button type="button" class="btn-modern btn-primary" onclick="printBarcode()">
            <i class="fas fa-print"></i>
            <%= __('stockByWarehouse.modal.print') %>
          </button>
          <button type="button" class="btn-modern btn-secondary" onclick="exportBarcode()">
            <i class="fas fa-download"></i>
            <%= __('stockByWarehouse.modal.export') %>
          </button>
          <button type="button" class="btn-modern btn-outline" data-bs-dismiss="modal">
            <i class="fas fa-times"></i>
            <%= __('stockByWarehouse.modal.close') %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

