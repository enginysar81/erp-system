  transform: rotate(180deg);
}

.shelf-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  border: 2px solid #e2e8f0;
  border-radius: 12px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  z-index: 1000;
  max-height: 300px;
  overflow: hidden;
}

.shelf-options-container {
  max-height: 240px;
