<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Initialize data for modal functions only
  const allBarcodes = <%- JSON.stringify(barcodes) %>;
  let currentBarcodeCode = '';
  let barcodeModalInstance = null;
  
  // Initialize modal instance on page load
  function initializeModal() {
    const modalElement = document.getElementById('barcodeModal');
    if (modalElement && !barcodeModalInstance) {
      barcodeModalInstance = new bootstrap.Modal(modalElement, {
        backdrop: true,
        keyboard: true,
        focus: true
      });
    }
  }
  
  // Open barcode modal
  function openBarcodeModal(barcodeCode) {
    const barcode = allBarcodes.find(b => b.code === barcodeCode);
    if (!barcode) return;
    
    currentBarcodeCode = barcodeCode;
    
    // Populate modal
    document.getElementById('modal-barcode').textContent = barcode.code;
    document.getElementById('modal-product-name').textContent = barcode.productName;
    
    // Features
    const featuresDiv = document.getElementById('modal-features');
    if (barcode.productAttributes && barcode.productAttributes.length > 0) {
      featuresDiv.innerHTML = barcode.productAttributes.map(attr => 
        `<span class="feature-tag">${attr.name}: ${attr.value}</span>`
      ).join('');
    } else {
      featuresDiv.innerHTML = '<span class="no-data">-</span>';
    }
    
    // Quantity
    const quantityClass = barcode.unit === 'metre' ? 'type-meter' : 'type-piece';
    const unitText = barcode.unit === 'metre' ? 'm' : 'adet';
    document.getElementById('modal-quantity').innerHTML = 
      `<div class="quantity-badge ${quantityClass}">${barcode.quantity} ${unitText}</div>`;
    
    // Shelf
    document.getElementById('modal-shelf').innerHTML = barcode.shelfId 
      ? `<div class="shelf-badge">${barcode.shelfId}</div>`
      : '<span class="no-data">-</span>';
    
    // Created date
    const createdDate = new Date(barcode.createdAt).toLocaleDateString('<%= locale %>', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
    document.getElementById('modal-created-date').textContent = createdDate;
    
    // Show modal safely
    if (barcodeModalInstance) {
      barcodeModalInstance.show();
    } else {
      // Fallback if instance not ready
      const modalElement = document.getElementById('barcodeModal');
      const tempModal = new bootstrap.Modal(modalElement);
      tempModal.show();
    }
  }
  
  // Copy to clipboard
  function copyToClipboard(elementId) {
    const element = document.getElementById(elementId);
    if (!element) return;
    
    const text = element.textContent;
    
    if (navigator.clipboard) {
      navigator.clipboard.writeText(text).then(() => {
        // Show success feedback
        const originalText = element.textContent;
        element.textContent = 'KopyalandÄ±!';
        element.classList.add('text-success');
        setTimeout(() => {
          element.textContent = originalText;
          element.classList.remove('text-success');
        }, 1000);
      });
    }
  }
  
  // Print barcode
  function printBarcode() {
    if (!currentBarcodeCode) return;
    
    const barcode = allBarcodes.find(b => b.code === currentBarcodeCode);
    if (!barcode) return;
    
    // Create print window
    const printWindow = window.open('', '_blank', 'width=800,height=600');
    printWindow.document.write(`
      <html>
        <head>
          <title>Barkod Etiketi - ${barcode.code}</title>
          <style>
            body { font-family: Arial, sans-serif; margin: 20px; }
            .label { border: 2px solid #000; padding: 20px; text-align: center; max-width: 400px; margin: 0 auto; }
            .barcode { font-size: 24px; font-weight: bold; margin: 10px 0; }
            .product { font-size: 16px; margin: 10px 0; }
            .details { font-size: 12px; color: #666; }
          </style>
        </head>
        <body>
          <div class="label">
            <div class="product">${barcode.productName}</div>
            <div class="barcode">${barcode.code}</div>
            <div class="details">
              ${barcode.quantity} ${barcode.unit === 'metre' ? 'm' : 'adet'}
              ${barcode.shelfId ? ' â¢ Raf: ' + barcode.shelfId : ''}
            </div>
          </div>
        </body>
      </html>
    `);
    printWindow.document.close();
    printWindow.focus();
    printWindow.print();
    printWindow.close();
  }
  
  // Export barcode
  function exportBarcode() {
    if (!currentBarcodeCode) return;
    
    const barcode = allBarcodes.find(b => b.code === currentBarcodeCode);
    if (!barcode) return;
    
    // Create CSV content
    const csvContent = [
      ['Barkod', 'ÃrÃ¼n AdÄ±', 'Miktar', 'Birim', 'Raf', 'Depo', 'KayÄ±t Tarihi'],
      [
        barcode.code,
        barcode.productName,
        barcode.quantity,
        barcode.unit,
        barcode.shelfId || '-',
        barcode.warehouseName,
        new Date(barcode.createdAt).toLocaleDateString('<%= locale %>')
      ]
    ].map(row => row.join(',')).join('\n');
    
    // Download CSV
    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    const url = URL.createObjectURL(blob);
    link.setAttribute('href', url);
    link.setAttribute('download', `barkod-${barcode.code}.csv`);
    link.style.visibility = 'hidden';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  }
  
  // Initialize only modal
  document.addEventListener('DOMContentLoaded', function() {
    initializeModal();
  });
</script>

